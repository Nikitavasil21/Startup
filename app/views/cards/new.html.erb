<%= form_for :cards, url: cards_path do |f| %>
<h1>Создать новую карточку</h1>
<p>
  <%= f.label :original %><br>
  <%= f.text_area :original %><br>
</p>
<p>
  <%= f.label :translated %>
  <%= f.text_area :translated %>
</p>
<p>
  <%= f.label :review_date %>
  <%= f.text_area :review_date %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', cards_path %>