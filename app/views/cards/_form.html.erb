<%= simple_form_for card, multipart: true do |f| %>
  <p>  
    <%= f.input :original %>
    <%= f.input :translated %>
    <%= f.datetime_select :review_date %>
    <%= f.input :picture, as: :file %>
    <%= f.association :deck, label: "Deck name", collection: current_user.decks.all %>
  </p>
  <p>
    <%= f.button :submit, class: "submit" %>
  </p>
<% end %>

<%= link_to 'Назад', cards_path %>